<p>ACA se editan teams</p>
<div class="container">
  <h2 class="text-center">Equipo {{data.idEquipo.name}}<strong></strong></h2>
</div>

<div class="container">
  <form
    class="row g-3 d-flex p-2"
    action="/editar/{{data.idEquipo.tla}}"
    method="POST"
    enctype="multipart/form-data"
  >
    <div class="col-md-3">
      <label for="nombre" class="form-label textoB">Nombre del Equipo</label>
      <input
        type="text"
        class="form-control"
        id="nombre"
        name="nombre"
        placeholder="Arsenal FC"
        value="{{data.idEquipo.name}}"
      />

    </div>
    <div class="col-md-2">
      <label
        for="nombre-abreviado"
        class="form-label textoB"
      >Abreviacion</label>
      <input
        type="text"
        class="form-control"
        id="nombre-abreviado"
        name="nombreAbreviado"
        placeholder="Arsenal"
        value="{{data.idEquipo.shortName}}"
      />
    </div>
    <div class="col-md-2">
      <label for="nombre-acronimo" class="form-label textoB">Acronimo</label>
      <input
        type="text"
        class="form-control"
        id="nombre-acronimo"
        name="tla"
        placeholder="ARS"
        value="{{data.idEquipo.tla}}"
      />
    </div>

    <div class="col-md-5">
      <label for="input-email" class="form-label textoB">Email</label>
      <input
        type="email"
        class="form-control"
        id="input-email"
        name="email"
        placeholder="arsenalTop16@gmail.com"
        value="{{data.idEquipo.email}}"
      />
    </div>
    <div class="col-3">
      <label for="input-direccion" class="form-label textoB">Pais</label>
      <input
        type="text"
        class="form-control"
        id="input-direccion"
        name="paisNombre"
        value="{{data.idEquipo.area.name}}"
      />
    </div>
    <div class="col-3">
      <label for="input-telefono" class="form-label textoB">Telefono</label>
      <input
        type="text"
        class="form-control"
        id="input-telefono"
        name="telefono"
        placeholder="+264123456"
        value="{{data.idEquipo.phone}}"
      />
    </div>
    <div class="col-6">
      <label for="input-pagina" class="form-label textoB">Pagina web</label>
      <input
        type="text"
        class="form-control"
        id="input-pagina"
        name="paginaWeb"
        value="{{data.idEquipo.website}}"
      />
    </div>
    <div class="col-3">
      <label for="input-fundacion" class="form-label textoB">AÃ±o de fundacion</label>
      <input
        type="text"
        class="form-control"
        id="input-fundacion"
        name="fundacion"
        placeholder="1887"
        value="{{data.idEquipo.founded}}"
      />
    </div>
    <div class="col-2">
      <label for="input-primer-color" class="form-label textoB">Color</label>
      <input
        type="text"
        class="form-control"
        id="input-colores"
        name="colores"
        placeholder="Azul / Rojo"
        value="{{data.idEquipo.clubColors}}"
      />
    </div>
    <div class="col-7">
      <label for="input-estadio" class="form-label textoB">Estadio</label>
      <input
        type="text"
        class="form-control"
        id="input-estadio"
        name="estadio"
        placeholder="El Monumental"
        value="{{data.idEquipo.venue}}"
      />
    </div>
    <div class="col-5">
      <label for="input-direccion" class="form-label textoB">Direccion</label>
      <input
        type="text"
        class="form-control"
        id="input-direccion"
        name="direccion"
        placeholder="Avenida siempre viva"
        value="{{data.idEquipo.address}}"
      />
    </div>
    <div class="col-md-7">
      <label for="imagen-url" class="form-label textoB">Escudo URL</label>
      <input
        type="text"
        class="form-control"
        id="imagen-url"
        name="imagenURL"
        placeholder="https://upload.wikimedia.org/wikipedia/en/5/53/Arsenal_FC.svg"
        value="{{data.idEquipo.crestUrl}}"
      />
    </div>
    <div class="col-12 mt-4">
      <input
        type="file"
        class="form-control"
        id="imagen-equipo"
        name="imagen"
        aria-describedby="inputGroupFileAddon04"
        aria-label="Upload"
      />
    </div>
    <div class="col-6">
      <p class="textoT">Escudo del equipo</p>
      <img
        class="rounded mx-auto d-block imagen2"
        src="{{data.idEquipo.crestUrl}}"
        alt="Imagen del escudo de {{data.idEquipo.name}}"
      />
    </div>
    {{#if data.idEquipo.crestLocal}}
      <div class="col-6">
        <p>Imagen local</p>
        <img
          class="rounded mx-auto d-block imagen2"
          src="{{data.idEquipo.crestLocal}}"
          alt="Imagen del escudo de {{data.idEquipo.name}} local"
        />
      </div>
    {{/if}}
    <tbody>
      <td>
        <div
          class="btn-group col-md-12 bg-light text-right"
          role="group"
          aria-label="Basic outlined example"
        >
          <a href="/" class="btn btn-danger justify-content-end">Volver</a>

          <a
            href="/eliminar/{{item.tla}}"
            class="btn btn-warning justify-content-end"
          >Eliminar</a>
        </div>
      </td>
    </tbody>

    {{#if data.idEquipo.error}}
      <div class="row g-3 d-flex p-2">
        <p class="error">{{data.idEquipo.error}}</p>
      </div>
    {{/if}}
  </form>
</div>