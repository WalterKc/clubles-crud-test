<tbody id="lista-principal">
  {{#each items as |item|}}
    <tr>
      <td>{{item.name}}</td>
      <td>{{item.area.name}}</td>
      <td>
        {{#if item.crestUrl}}
          <img class="imagen" src="{{item.crestUrl}}" name="url-imagen" />
        {{else}}
          <img class="imagen" src="{{item.crestLocal}}" name="local-imagen" />
        {{/if}}
      </td>

      <td>
        <div class="btn-group" role="group" aria-label="Basic outlined example">
          <a href="/equipos/{{item.tla}}" class="btn btn-outline-danger">Ver</a>
          <a
            href="/editar/{{item.tla}}"
            class="btn btn-outline-danger"
          >Editar</a>
          <a
            href="/eliminar/{{item.tla}}"
            class="btn btn-outline-danger"
          >Eliminar</a>
        </div>
      </td>
    </tr>
  {{/each}}
</tbody>