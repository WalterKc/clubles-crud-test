<div class="container bg-dark titulo text-center">
  <h1>Crud Clubes</h1>
</div>
<div class="container bg-dark">
  <div>
    <div class="d-flex justify-content-between bd-highlight mb-3">
      <div class="p-2">
        <p>Numero de equipos = <strong>{{equipos.length}}</strong></p>
        
      </div>
      <div class="p-2">
        <a href="/formulario" id="boton-añadir" class="btn btn-outline-primary">Agregar equipo</a>

      </div>
      <div class="p-2">
        <a href="/reiniciar" id="boton-añadir" class="btn btn-outline-primary">REINICIAR</a>
      </div>
    </div>
  </div>
  <table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">Nombre</th>
        <th scope="col">Pais</th>
        <th scope="col">Escudo</th>
        <th scope="col">Accion</th>
      </tr>
    </thead>
    <tbody id="lista-principal">
      {{>navegacion items=equipos}}

    </tbody>
  </table>
